<script>
  // Click tracking — dispatch custom event to Analytics island
  const grid = document.getElementById('social-grid');
  grid?.addEventListener('click', (e) => {
    const card = (e.target as HTMLElement).closest<HTMLElement>('.social-card');
    if (!card) return;

    const target = card.dataset.track;
    if (target) {
      document.dispatchEvent(
        new CustomEvent('analytics:click', { detail: target })
      );
    }
  });
</script>
