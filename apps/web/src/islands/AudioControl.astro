---
/**
 * AudioControl Island — handles volume management and mute/unmute.
 * Dispatches 'audio:update' events for the VideoBackground to listen to.
 * client:load → interactive immediately.
 */
---

<div class="audio-controls animate-in animate-in--d8">
  <button id="mute-toggle" class="audio-btn" aria-label="Sesi Kapat/Aç">
    <!-- Speaker Loud (Unmuted) -->
    <svg class="speaker-on" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
      <path d="M19.07 4.93a10 10 0 0 1 0 14.14M15.54 8.46a5 5 0 0 1 0 7.07"></path>
    </svg>
    <!-- Speaker Muted -->
    <svg class="speaker-off" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
      <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
      <line x1="23" y1="9" x2="17" y2="15"></line>
      <line x1="17" y1="9" x2="23" y2="15"></line>
    </svg>
  </button>
  
  <div class="volume-slider-wrapper">
    <input 
      type="range" 
      id="volume-slider" 
      class="volume-slider" 
      min="0" 
      max="1" 
      step="0.01" 
      value="0.5"
      aria-label="Ses Seviyesi"
    />
  </div>
</div>

<script>
  const muteBtn = document.getElementById('mute-toggle');
  const volumeSlider = document.getElementById('volume-slider') as HTMLInputElement;
  const speakerOn = document.querySelector('.speaker-on') as HTMLElement;
  const speakerOff = document.querySelector('.speaker-off') as HTMLElement;

  let isMuted = false;
  let lastVolume = 0.5;

  const updateAudio = (volume: number, muted: boolean) => {
    document.dispatchEvent(new CustomEvent('audio:update', {
      detail: { volume, muted }
    }));
    
    // Update UI
    if (speakerOn && speakerOff) {
      speakerOn.style.display = muted || volume === 0 ? 'none' : 'block';
      speakerOff.style.display = muted || volume === 0 ? 'block' : 'none';
    }
  };

  muteBtn?.addEventListener('click', () => {
    isMuted = !isMuted;
    updateAudio(volumeSlider.valueAsNumber, isMuted);
  });

  volumeSlider?.addEventListener('input', (e) => {
    const val = (e.target as HTMLInputElement).valueAsNumber;
    isMuted = val === 0;
    updateAudio(val, isMuted);
  });

  // Listen for initial unmuting from first interaction (from VideoBackground)
  document.addEventListener('video:unmuted', () => {
    isMuted = false;
    if (speakerOn && speakerOff) {
      speakerOn.style.display = 'block';
      speakerOff.style.display = 'none';
    }
  });
</script>

<style>
  .audio-controls {
    position: fixed;
    bottom: var(--space-xl);
    left: var(--space-xl);
    z-index: 100;
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) var(--space-md);
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-full);
    backdrop-filter: blur(8px);
    transition: all var(--duration-normal) var(--ease-out-expo);
  }

  .audio-controls:hover {
    background: var(--bg-card-hover);
    border-color: var(--accent);
  }

  .audio-btn {
    background: none;
    border: none;
    color: var(--text-primary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    transition: transform var(--duration-fast);
  }

  .audio-btn:hover {
    transform: scale(1.1);
  }

  .audio-btn svg {
    width: 20px;
    height: 20px;
  }

  .volume-slider-wrapper {
    width: 0;
    overflow: hidden;
    transition: width var(--duration-normal) var(--ease-out-expo);
    display: flex;
    align-items: center;
  }

  .audio-controls:hover .volume-slider-wrapper {
    width: 80px;
    margin-left: var(--space-xs);
  }

  .volume-slider {
    -webkit-appearance: none;
    width: 100%;
    height: 4px;
    background: var(--border-subtle);
    border-radius: var(--radius-full);
    outline: none;
    cursor: pointer;
  }

  .volume-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 12px;
    height: 12px;
    background: var(--accent);
    border-radius: 50%;
    cursor: pointer;
    box-shadow: 0 0 8px var(--accent-glow);
  }
</style>
