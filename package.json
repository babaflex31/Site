{
  "name": "landing-monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "deploy:web": "pnpm --filter web build && wrangler pages deploy apps/web/dist --project-name=my-landing",
    "deploy:api": "pnpm --filter api exec wrangler deploy"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
